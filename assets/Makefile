# make --recon

SRC_FILES = $(wildcard svg/Simple_*.svg)
OBJ_FILES = $(patsubst %.svg,%.png,$(SRC_FILES))

#DPI = 96 # 140x190
DPI = 64 # 93x127
#DPI = 32 # 46x63

# target ... : prerequisites ...
#	recipe
#	...

# $@ The file name of the target of the rule
# $< The name of the first prequisite
# $* The stem with which an implicit rule matches

# Pattern rule for exporting svg to png
%.png: %.svg 
	inkscape $< --export-dpi=$(DPI) -o png/$(notdir $@)

# default build target comes first
all: $(OBJ_FILES)

check:
	@echo Source files: $(SRC_FILES)
	@echo Object files: $(OBJ_FILES)

# remove all built and autogenerated files
clean:
	rm -f png/*.png
